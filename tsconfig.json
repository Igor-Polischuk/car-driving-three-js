{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@components/*":  ["./ts/components/*"],
      "@utility/*":  ["./ts/utility/*"],
      "@styles/*": ["./scss/*"],
      "@assets/*": ["./assets/*"],
      "@image/*": ["./assets/images/*"],
      "@models/*": ["./assets/models/*"],
      "@sounds/*": ["./assets/sounds/*"]
      
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node"
  }
}